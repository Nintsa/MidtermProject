<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvQuestionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/question"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="What was the first time..."
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/tvQuestionTitle"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/chbFirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvQuestion" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvFirstAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="First Answer"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/chbFirst"
        app:layout_constraintStart_toEndOf="@id/chbFirst"
        app:layout_constraintTop_toTopOf="@id/chbFirst" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/chbSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvFirstAnswer" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSecondAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="Second Answer"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/chbSecond"
        app:layout_constraintStart_toEndOf="@id/chbSecond"
        app:layout_constraintTop_toTopOf="@id/chbSecond" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/chbThird"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSecondAnswer" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvThirdAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="Third Answer"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/chbThird"
        app:layout_constraintStart_toEndOf="@id/chbThird"
        app:layout_constraintTop_toTopOf="@id/chbThird" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/chbFourth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvThirdAnswer" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvFourthAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="Fourth Answer"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/chbFourth"
        app:layout_constraintStart_toEndOf="@id/chbFourth"
        app:layout_constraintTop_toTopOf="@id/chbFourth" />

</androidx.constraintlayout.widget.ConstraintLayout>